{
  "build": {
    "env": {
      "ROLLUP_SKIP_NODEJS_NATIVE": "true"
    }
  },
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "client/api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/draw", "dest": "/index.html" },
    { "src": "/admin", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}